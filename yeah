    for _, tab in pairs(Content:GetChildren()) do
        if tab:IsA("ScrollingFrame") then
            tab.CanvasSize = UDim2.new(0, 0, 0, tab.UIListLayout.AbsoluteContentSize.Y + 50)
        end
    end
end)

