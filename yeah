-- Scripts Tab
ScriptsTab:Section("Popular Scripts")
ScriptsTab:Section("Hitbox Expander")
ScriptsTab:Toggle("Enable", false, function(state)
    HitboxEnabled = state
    if state then
        EnableHitbox()
        print("Hitbox On", "Active ðŸ’—", 4)
    else
        DisableHitbox()
        print("Hitbox Off", "Back to normal", 4)
    end
end)

ScriptsTab:Slider("Size", 4, 20, 8, function(value)
    HitboxSize = value
    if HitboxEnabled then
        for _, player in pairs(Players:GetPlayers()) do
            if player ~= Players.LocalPlayer and player.Character then
                ApplyHitbox(player.Character)
            end
        end
    end
end)

-- NEW: ESP Toggle
ScriptsTab:Section("ESP")
ScriptsTab:Toggle("Enable Nametags", false, function(state)
    ESPEnabled = state
    if state then
        EnableESP()
        print("ESP On!", "Light pink nametags on others ðŸ’•", 4)
    else
        DisableESP()
        print("ESP Off", "Nametags removed ðŸ‘€", 4)
    end
end)

-- NEW: Teleport List
ScriptsTab:Section("Teleport")

local playerList = GetPlayerList()
local TeleportDropdown = ScriptsTab:Dropdown("Select Player", playerList, playerList[1] or "None", function(selectedName)
    if selectedName and selectedName ~= "None" then
        TeleportTo(selectedName)
    end
end)

-- Optional: Auto-refresh dropdown when players join/leave (already exists below, keep it)

-- Refresh dropdown when players join/leave
Players.PlayerAdded:Connect(function()
    task.wait(1)  -- Give time for name to register
    playerList = GetPlayerList()
    TeleportDropdown.refresh()
end)

Players.PlayerRemoving:Connect(function(player)
    task.wait(0.5)
    playerList = GetPlayerList()
    TeleportDropdown.refresh()
end)
